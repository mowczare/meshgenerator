<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.SubScene?>
<?import pl.edu.agh.iet.gg.meshgenerator.visualization.view.component.axis.XAxis?>
<?import pl.edu.agh.iet.gg.meshgenerator.visualization.view.component.axis.YAxis?>
<?import pl.edu.agh.iet.gg.meshgenerator.visualization.view.component.axis.ZAxis?>
<?import pl.edu.agh.iet.gg.meshgenerator.visualization.view.component.RotatableGroup?>

<GridPane xmlns="http://javafx.com/javafx/8.0.112-ea"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="pl.edu.agh.iet.gg.meshgenerator.visualization.controller.MainWindowController"
          hgap="5">

    <padding>
        <Insets bottom="5" left="5" right="5" top="5"/>
    </padding>

    <Pane GridPane.columnIndex="0" GridPane.rowIndex="0">
        <fx:include source="MenuView.fxml"/>
    </Pane>

    <Pane GridPane.columnIndex="1" GridPane.rowIndex="0">
        <SubScene fx:id="graphScene" depthBuffer="true" height="600" width="640">
            <root>
                <RotatableGroup fx:id="environmentGroup">
                    <Group>
                        <XAxis/>
                        <YAxis/>
                        <ZAxis/>
                    </Group>

                    <Group fx:id="graphGroup"/>
                </RotatableGroup>
            </root>
        </SubScene>
    </Pane>

</GridPane>
